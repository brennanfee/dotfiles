#!/usr/bin/env sh

# POSIX strict mode (may produce issues in sourced scenarios)
set -o errexit
set -o nounset
#set -o xtrace # same as set -x, turn on for debugging

IFS=$(printf '\n\t')
# END POSIX scrict mode

OPTION_INPUT=${1:-}
OPTION=""
if [ "${OPTION_INPUT}" = "-f" ]; then
  OPTION="--force"
elif [ "${OPTION_INPUT}" = "--force" ]; then
  OPTION="--force"
fi

SCRIPT="${HOME}/.dotfiles/bin/mount-moose"
if [ -f "${SCRIPT}" ]; then
  bash "${SCRIPT}" "files" "${OPTION}"
  bash "${SCRIPT}" "other" "${OPTION}"
  bash "${SCRIPT}" "backups" "${OPTION}"
fi
