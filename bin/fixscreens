#!/usr/bin/env sh

xrandr --output HDMI-A-0 --off --output DisplayPort-0 --off --output DisplayPort-1 --off --output DisplayPort-2 --off

xrandr --output HDMI-A-0 --primary --mode 3840x2160 --pos 0x0 --rotate normal --output DisplayPort-0 --off --output DisplayPort-1 --mode 3840x2160 --pos 3840x0 --rotate normal --output DisplayPort-2 --off
