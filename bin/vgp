#!/usr/bin/env bash

# Bash strict mode
# shellcheck disable=SC2154
([[ -n ${ZSH_EVAL_CONTEXT} && ${ZSH_EVAL_CONTEXT} =~ :file$ ]] ||
  [[ -n ${BASH_VERSION} ]] && (return 0 2>/dev/null)) && SOURCED=true || SOURCED=false
if ! ${SOURCED}; then
  set -o errexit  # same as set -e
  set -o nounset  # same as set -u
  set -o errtrace # same as set -E
  set -o pipefail
  set -o posix
  #set -o xtrace # same as set -x, turn on for debugging

  shopt -s extdebug
  IFS=$(printf '\n\t')
fi
# END Bash strict mode

# Load the colors if needed
if [[ ${text_black:-} == "" ]]; then
  # shellcheck source=/home/brennan/.dotfiles/bash/base-profile.bash
  source "${DOTFILES}/bash/base-profile.bash"
fi

# Check we are in a directory with a Vagrantfile
if [[ ! -f "Vagrantfile" ]]; then
  echo -e "${text_red}Not in a directory with a Vagrantfile!${text_normal}"
  exit 1
fi

# Set the provisioner to use
provisioner=main
if [[ $# -eq 0 ]]; then
  echo -e "${text_yellow}No provisioner given, using default of 'main'${text_normal}"
else
  provisioner=$1
fi

# Make the call
vagrant provision --provision-with "${provisioner}"
