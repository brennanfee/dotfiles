#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.
# Original Author: pfh
# Source: http://crunchbang.org/forums/viewtopic.php?pid=129265#p129265
# Further Modified by: Chef-Stark
# This is the same tiefighter1 color-script minus the inverted colors

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"

  blackfbright="${esc}[90m";   redfbright="${esc}[91m";    greenfbright="${esc}[92m"
  yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   purplefbright="${esc}[95m"
  cyanfbright="${esc}[96m";    whitefbright="${esc}[97m"

  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.
# ****************************** Building blocks: ‚ñà ‚ñì ‚ñí ‚ñë ‚ñÑ ‚ñÄ ‚ñê ‚ñå ‚óè  ‚ïê ‚ïë ‚ïî ‚ï¶ ‚ïó ‚ïö ‚ï© ‚ïù ‚ñ† ‚ñ¨ ‚ñ≤ ‚ñº ‚óÑ ‚ñ∫

initializeANSI

cat << EOF

${yellowf}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${redfbright}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${cyanf}   ‚ñÑ‚ñà     ‚ñà‚ñÑ
${yellowf} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${redfbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${cyanf} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ
${yellowf} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${redfbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${cyanf} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà
${yellowf} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${redfbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${cyanf} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà
${yellowf} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${redfbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${cyanf} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ
${yellowf}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${redfbright}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${cyanf}   ‚ñÄ‚ñà     ‚ñà‚ñÄ
${reset}
EOF
