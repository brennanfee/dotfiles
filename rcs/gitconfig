# This is Git's global configuration file.
[push]
    default = simple
    followTags = true
[color]
    ui = auto
[core]
    editor = vim
    eol = lf
    autocrlf = input
[fetch]
    prune = true
[http]
    postBuffer = 524288000
[diff]
    renamelimit = 0
[merge]
    renamelimit = 0
[alias]
    co = checkout
    c = commit
    ci = commit
    br = branch
    st = status
    p = pull
    unstage = 'reset HEAD --'
    last = 'log -1 HEAD'
[include]
    path = ~/.config/git/gitconfig.os
