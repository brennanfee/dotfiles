[diff]
  tool = bc
  guitool = bc
[difftool "bc"]
  cmd = \"/mnt/c/Program Files/Beyond Compare 4/BCompare.exe\" -expandall \"$(wslpath -w $LOCAL)\" \"$(wslpath -w $REMOTE)\"
