# This is Git's global configuration file.
[push]
  default = simple
  followTags = true
[color]
  ui = auto
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[core]
  editor = vim
  eol = lf
  autocrlf = input
  gvfs = true
  pager = diff-so-fancy | less --tabs=2 -RFX
[interactive]
  diffFilter = diff-so-fancy --patch
[diff-so-fancy]
  markEmptyLines = false
  rulerWidth = 100
[fetch]
  prune = true
  pruneTags = true
[checkout]
  defaultRemote = origin
[http]
  postBuffer = 524288000
[diff]
  renamelimit = 0
[merge]
  renamelimit = 0
[alias]
  co = checkout
  c = commit
  ci = commit
  br = branch
  st = status
  p = push
  l = pull
  unstage = 'reset HEAD --'
  last = 'log -1 HEAD'
  patch = !git --no-pager diff --no-color
[include]
  path = ~/.config/git/gitconfig.os
  path = ~/.config/git/gitconfig.user
  path = ~/.config/git/gitconfig.wsl
  path = ~/.config/git/gitconfig.local
[pull]
  rebase = false
  ff = only
[init]
  defaultBranch = main
[mergetool]
  keepBackup = false
