# This is Git's global configuration file.
[push]
  default = simple
  followTags = true
[color]
  ui = auto
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = 0 red bold
  newNormal = green
  newHighlight = 0 green bold
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green
  whitespace = red reverse
[color "status"]
  added = green
  changed = yellow
  untracked = magenta
  deleted = red
  branch = 11
[core]
  editor = vim
  eol = lf
  autocrlf = input
  gvfs = true
  pager = delta
  longpaths = true
[interactive]
  diffFilter = delta --color-only
[delta]
  dark = true
  width = -12
  navigate = true
  side-by-side = true
  hyperlinks = true
  hunk-header-style = file line-number syntax
  file-decoration-style = yellow ul ol
  file-style = yellow
[fetch]
  prune = true
  pruneTags = true
[checkout]
  defaultRemote = origin
[http]
  postBuffer = 524288000
[diff]
  renamelimit = 0
  colorMoved = default
[merge]
  renamelimit = 0
  conflictstyle = diff3
[alias]
  co = checkout
  c = commit
  ci = commit
  br = branch
  st = status
  p = push
  l = pull
  unstage = 'reset HEAD --'
  last = 'log -1 HEAD'
  patch = !git --no-pager diff --no-color
  clone = clone --recurse-submodules
[include]
  path = ~/.config/git/gitconfig.os
  path = ~/.config/git/gitconfig.user
  path = ~/.config/git/gitconfig.wsl
  path = ~/.config/git/gitconfig.local
[pull]
  rebase = false
  ff = only
[init]
  defaultBranch = main
[mergetool]
  keepBackup = false
[user]
  signingKey = ~/.ssh/id_ed25519_git.pub
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.config/git/allowed_signers
[commit]
  gpgsign = true
[tag]
  gpgsign = true
