# This is Git's global configuration file.
[push]
  default = simple
  followTags = true
[color]
  ui = auto
[color "diff-highlight"]
  oldNormal = 9 bold
  oldHighlight = 0 9 bold
  newNormal = 10
  newHighlight = 0 10 bold
[color "diff"]
  meta = 11
  frag = magenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = 10
  whitespace = red reverse
[color "status"]
  added = 10
  changed = yellow
  untracked = magenta
  deleted = 9
  branch = 11
[core]
  editor = vim
  eol = lf
  autocrlf = input
  gvfs = true
  pager = diff-so-fancy | less --tabs=2 -RFX
[interactive]
  diffFilter = diff-so-fancy --patch
[diff-so-fancy]
  markEmptyLines = false
  rulerWidth = 100
[fetch]
  prune = true
  pruneTags = true
[checkout]
  defaultRemote = origin
[http]
  postBuffer = 524288000
[diff]
  renamelimit = 0
[merge]
  renamelimit = 0
[alias]
  co = checkout
  c = commit
  ci = commit
  br = branch
  st = status
  p = push
  l = pull
  unstage = 'reset HEAD --'
  last = 'log -1 HEAD'
  patch = !git --no-pager diff --no-color
  clone = clone --recurse-submodules
[include]
  path = ~/.config/git/gitconfig.os
  path = ~/.config/git/gitconfig.user
  path = ~/.config/git/gitconfig.wsl
  path = ~/.config/git/gitconfig.local
[pull]
  rebase = false
  ff = only
[init]
  defaultBranch = main
[mergetool]
  keepBackup = false
[user]
  signingKey = ~/.ssh/id_ed25519_git.pub
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = ~/.config/git/allowed_signers
[commit]
  gpgsign = true
[tag]
  gpgsign = true
